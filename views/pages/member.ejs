<div class="container">
    <h4>Data Member</h4>
    <hr>
    <!-- menampilkan data member -->
    <ul class = "list-group">
       <!-- forEach -> scanning isi array -->
       <% data.forEach(element => { %>
          <li class = "list-group-item">
              <div class = "row">
               <div class = "col-lg-3">
                   <small class = "text-success">
                      Nama
                   </small> <br>
                   <%= element.nama_member %> 
               </div>

               <div class = "col-lg-3">
                   <small class = "text-success">
                      Alamat
                   </small> <br>
                   <%= element.alamat %> 
               </div>

               <div class = "col-lg-3">
                   <small class = "text-success">
                      Telepon
                   </small> <br>
                   <%= element.telepon %> 
               </div>

              <div class="col-lg-3">
                 <small class="text-succes">
                    Opsi

                 </small> <br>
                 <a href="/member/edit/<%= element.id %> ">
                 <button class="btn btn-primary">
                    Edit
                 </button>
                 </a>
                 
                 <a href="/member/delete/<%= element.id %> "
                    onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                    <button class="btn btn-danger">
                        Delete
                    </button>
                </a>
              </div>

             </div>
          </li>
       <% }) %>
    </ul>
</div>